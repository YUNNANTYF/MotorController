import socket

import time

GPIO_PIN = 24

GPIO.setmode(GPIO.BCM)
GPIO.setup(GPIO_PIN, GPIO.OUT)

HOST = '192.168.10.103'
PORT = 1234
sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
sock.connect((HOST, PORT))
time.sleep(2)
while True:



        command = raw_input('move ur joystick!')

        GPIO.output(GPIO_PIN,GPIO.HIGH)
        time.sleep(1)
        GPIO.output(GPIO_PIN,GPIO.LOW)
        time.sleep(1)

        while count > 0:
        if(GPIO.input(GPIO_PIN) == 1):
        count = count - 1
        print("input high")
        time.sleep(0.1)

        sock.send(command)
        reply = sock.recv(1024)
        GPIO.cleanup()

if reply == 'Terminate':
                break
        print reply
